{
    "name": "ihashir/lush-beauty-salon",
    "description": "A fully designed and developed website for Lush Beauty Salon, including responsive design and SEO optimization.",
    "type": "project",
    "require": {
        "phpmailer/phpmailer": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"copy('vendor/autoload.php', 'autoload.php');\""
        ],
        "post-update-cmd": [
            "@php -r \"copy('vendor/autoload.php', 'autoload.php');\""
        ]
    },
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
